/**
 * Implements hook_permission().
 */
function webservice_permission() {
    $permissions = array();

    $permissions[PERM_WEBSERVICE_ALLOW] = array(
        'title' => t('Allow webservice api'),
        'description' => t('Checking this permission will allow api webservice to work'),
    );
    return $permissions;
}