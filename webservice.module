/**
 * @param $path
 * @param $arg
 * @return string
 */
function webservice_help($path, $arg) {
    switch ($path) {
        // Main module help for the block module
        case 'admin/help#'.WEBSERVICE_MODULE_NAME:
            return '<p>' . t('This module is for providing the webservice API functionality') . '</p>';
    }
}

